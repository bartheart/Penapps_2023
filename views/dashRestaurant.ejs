<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        nav {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        li {
            display: inline;
            margin-right: 20px;
        }

        .options {
            float: right;
        }

        .dashboard {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            color: #333;
            margin-top: 20px;
        }

        /* Placeholder styles for sections */
        .total-sales,
        .update-menu,
        .update-store-info,
        .update-store-hours,
        .accept-service {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .total-sales:hover,
        .update-menu:hover,
        .update-store-info:hover,
        .update-store-hours:hover,
        .accept-service:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Menu</a></li>
            <li><a href="#">Location</a></li>
            <li><a href="#">Details</a></li>
            <li class="options"><a href="#">Logout</a></li>
        </ul>
    </nav>

    <!-- Restaurant Dashboard Content -->
    <div class="dashboard">
        <h1>Restaurant Dashboard</h1>
        
        <!-- Total Sales Analysis -->
        <div class="total-sales">
            <h2>Total Sales Analysis</h2>
            <!-- Display total sales analysis here -->
        </div>

        <!-- Update Menu -->
        <div class="update-menu">
            <h2>Update Menu</h2>
            <!-- Add menu update options here -->
        </div>

        <!-- Update Store Information -->
        <div class="update-store-info">
            <h2>Update Store Information</h2>
            <!-- Add store information update options here -->
        </div>

        <!-- Update Store Hours -->
        <div class="update-store-hours">
            <h2>Update Store Hours</h2>
            <!-- Add store hours update options here -->
        </div>

        <!-- Accept Service Requests -->
        <div class="accept-service">
            <h2>Accept Service Requests</h2>
            <!-- Display and manage service requests here -->
        </div>
    </div>
</body>
</html>
