<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        li {
            display: inline;
            margin-right: 20px;
        }

        .options {
            float: right;
        }

        .dashboard {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        h1, h2 {
            color: #333;
            margin-top: 20px;
        }

        /* Placeholder styles for sections */
        .section {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .section:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        }

        /* Styling for specific sections */
        .reservation-info {
            background-color: #f0f7ff;
        }

        .accept-reservation {
            background-color: #e0ffe0;
        }

        .cancel-reservation {
            background-color: #ffcccc;
        }

        /* Styling for buttons */
        .button {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .button:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Menu</a></li>
            <li><a href="#">Location</a></li>
            <li><a href="#">Details</a></li>
            <li class="options"><a href="#">Logout</a></li>
        </ul>
    </div>

    <!-- Restaurant Dashboard Content -->
    <div class="dashboard">
        <h1>Restaurant Dashboard</h1>

        <!-- Reservation Availability -->
        <div class="section reservation-info">
            <h2>Reservation Availability</h2>
            <p>Available Tables: 10</p>
            <p>Reservation Requests: 3</p>
            <button class="button">Accept Reservation</button>
            <button class="button">Cancel Reservation</button>
        </div>

        <!-- Accept Reservation -->
        <div class="section accept-reservation">
            <h2>Accept Reservation</h2>
            <!-- Add reservation acceptance options here -->
        </div>

        <!-- Cancel Reservation -->
        <div class="section cancel-reservation">
            <h2>Cancel Reservation</h2>
            <!-- Add reservation cancellation options here -->
        </div>

        <!-- Total Sales Analysis -->
        <div class="section total-sales">
            <h2>Total Sales Analysis</h2>
            <!-- Display total sales analysis here -->
        </div>

        <!-- Update Menu -->
        <div class="section update-menu">
            <h2>Update Menu</h2>
            <!-- Add menu update options here -->
        </div>

        <!-- Update Store Information -->
        <div class="section update-store-info">
            <h2>Update Store Information</h2>
            <!-- Add store information update options here -->
        </div>
    </div>
</body>
</html>
